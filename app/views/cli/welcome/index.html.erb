<% content_for :body_class, "home-page" %>

<% content_for :canonical do %>
  <%= render "shared/canonical", href: root_url %>
<% end %>

<% provide :social_media_meta_tags do %>
  <%= render "shared/social_media_meta_tags",
              social_url: root_url %>
<% end %>

<main>

  <div class='hero-wrapper'>
    <%= video_tag 'munich.mp4',
      autoplay: true,
      loop: true,
      muted: true,
      controls: true,
      controlsList: "nodownload nofullscreen noremoteplayback",
      disablepictureinpicture: true  %>

    <div class='hero-content'>
      <div class='row'>
        <div class='column position-relative'>
          <div class='hero-text'>
            <span><%= t('cli.welcome.hero.url') %></span>
            <%= t('cli.welcome.hero.text') %>
          </div>
          <div class='hero-cta'>
            <%= t('cli.welcome.hero.cta') %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class='row margin-top'>
    <div class='column'>
      <%= render_custom_block 'home_page_1' %>
    </div>
  </div>

  <%= render "feeds" %>

  <div class='row clear'>
    <div class='small-12 medium-9 column'>
      <%=render_custom_block 'home_page_welcome' %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 medium-9 column">
      <% page = SiteCustomization::Page.find_by slug: "indexdt" %>
      <% if page %>
        <h4 class="welcometitle"><%= page.title %></h4>
        <%= auto_link_already_sanitized_html AdminWYSIWYGSanitizer.new.sanitize(page.content) %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% if @cards.any? %>
      <div class="small-12 column <%= "large-8" if feed_processes_enabled? %>">
        <%= render partial: "cards", locals: { cards: @cards, section_title: t("welcome.cards.title") } %>
      </div>
    <% end %>

    <% if feed_processes_enabled? %>
      <div class="small-12 large-4 column">
        <%= render "processes" %>
      </div>
    <% end %>
  </div>

  <% if feature?("user.recommendations") && (@recommended_debates.present? || @recommended_proposals.present?) %>
    <%= render "recommended",
                recommended_debates: @recommended_debates,
                recommended_proposals: @recommended_proposals %>
  <% end %>
</main>
