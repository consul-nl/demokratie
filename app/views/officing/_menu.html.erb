<div class="admin-sidebar">
  <ul id="officing_menu">
    <% if vote_collection_shift? %>
      <li class="<%= "js-vote-collection" %>
                 <%= " is-active" if controller_name == "voters" %>
                 <%= " is-hidden" if controller_name == "voters" && Poll.votable_by(@user).any? %>">
        <%= link_to t("officing.menu.voters"), new_officing_residence_path, class: "users-link" %>
      </li>
    <% end %>

    <% if final_recount_shift? %>
      <li <%= "class=is-active" if ["results", "ballot_sheets"].include?(controller_name) || (controller_name == "polls" && action_name == "final") %>>
        <%= link_to t("officing.menu.total_recounts"), final_officing_polls_path, class: "users-link" %>
      </li>
    <% end %>

    <% if current_user.officing_manager? %>
      <% current_user.officing_manager.officing_polls.each do |poll| %>
        <li>
          <%= link_to poll.name, officing_offline_poll_voters_verify_user_path(poll), class: "users-link" %>
        </li>
      <% end %>

      <% current_user.officing_manager.officing_proposal_phases.each do |proposal_phase| %>
        <li>
          <%= link_to (proposal_phase.phase_tab_name || proposal_phase.projekt.name), verify_user_officing_proposal_phase_path(proposal_phase), class: "users-link" %>
        </li>

        <li>
          <%= link_to (proposal_phase.phase_tab_name || proposal_phase.projekt.name) + " Menge", bulk_votes_officing_proposal_phase_path(proposal_phase), class: "users-link" %>
        </li>
      <% end %>

      <% current_user.officing_manager.selecting_budgets.each do |budget| %>
        <li>
          <%= link_to budget.projekt.name, verify_user_officing_budget_path(budget), class: "users-link" %>
        </li>
      <% end %>

      <% current_user.officing_manager.balloting_budgets.each do |budget| %>
        <li>
          <%= link_to budget.projekt.name, verify_user_officing_budget_path(budget), class: "users-link" %>
        </li>
      <% end %>

    <% end %>
  </ul>
</div>
