<td style="<%= css_for_mailer_content %>">
  <h1 style="<%= css_for_mailer_heading %>">
    <%= t("mailers.resource_hidden.title") %>
  </h1>

  <p style="<%= css_for_mailer_text %>">
    <%= t("mailers.resource_hidden.hi", username: @author.username) %>
  </p>

  <p style="<%= css_for_mailer_text %>">
    <%= t("mailers.resource_hidden.text1") %>
  </p>

  <p style="<%= css_for_mailer_text %>">
    <%= sanitize(
      t("mailers.resource_hidden.text2",
        netiquette_link: link_to(t("mailers.resource_hidden.netiquette_link_text"),
                                 page_url("netiquette"))
       ),
       attributes: %w[href]
    ) %>
  </p>

  <p style="<%= css_for_mailer_text %>">
    <%= t("mailers.resource_hidden.text3") %>
  </p>

  <p style="<%= css_for_mailer_text %>">
    <%= t("mailers.resource_hidden.sincerely") %>
  </p>
</td>
