<td style="<%= css_for_mailer_content %>">

  <h1 style="<%= css_for_mailer_heading %>">
    <%= t("mailers.budget_investment_unselected.title") %>
  </h1>

  <p style="<%= css_for_mailer_text %>">
    <%= t("mailers.budget_investment_unselected.hi", username: @author.username) %>
  </p>

  <p style="<%= css_for_mailer_text %>">
    <%= sanitize(
      t("mailers.budget_investment_unselected.text",
        proposal_link: link_to(@investment.title,
                               budget_investment_url(@investment.budget, @investment)),
        projekt_link: link_to(t("mailers.budget_investment_unselected.projekt_link_text"),
                              page_url(@investment.projekt.page.slug))
       ),
       attributes: %w[href]
    ) %>
  </p>

  <p style="<%= css_for_mailer_text %>">
    <%= t("mailers.budget_investment_unselected.sincerely") %>
    <br>
    <%= t("mailers.shared.signature") %>
  </p>
</td>
