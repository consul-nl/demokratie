<% if resource.errors.any? %>
  <div id="error_explanation" data-alert class="callout alert" data-closable>
    <button class="close-button" aria-label="<%= t("application.close") %>" type="button" data-close>
      <span aria-hidden="true">&times;</span>
    </button>

    <strong role="alert" aria-live="assertive">
      <% errors_count = resource.errors.count %>

      <%= pluralize errors_count, t("form.error"), t("form.errors") %>

      <% if local_assigns[:message].present? %>
        <%= message %>
      <% else %>
        <%= sanitize(t("form.not_saved")) %>
      <% end %>

      <ul>
        <% resource.errors.each do |error| %>
          <% if error.attribute == :projekt_labels %>
            <li><%= t("activerecord.errors.models.#{resource.model_name.param_key}.attributes.#{error.attribute}.#{error.type}") %></li>
          <% elsif error.attribute == :sentiment_id %>
            <li><%= t("activerecord.errors.models.#{resource.model_name.param_key}.attributes.sentiment.#{error.type}") %></li>
          <% else %>
            <li><%= error.full_message %></li>
          <% end %>
        <% end %>
      </ul>
    </strong>
  </div>
<% end %>
