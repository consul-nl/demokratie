<% launch_page ||= false %>

<header>
  <div class="js-sticky-header top-bar-wrapper">
    <div class="top-bar-background-wrapper">
      <div class="top-bar" data-white-text="<%= extended_feature?('general.use_white_top_navigation_text') %>">
        <span data-responsive-toggle="responsive-menu"
              class="hamburger-menu header--mobile-hamburger-menu focusable js-toggle-mobile-menu js-prevent-key-scroll"
              role="button"
              tabindex="0"
              aria-haspopup="true"
              aria-expanded="false"
              aria-label='<%= t('custom.links.menu.mobile.menu_label') %>' >
              <span class="menu-icon dark" data-toggle></span>
        </span>

        <div class="top-bar--title">

          <%= link_to (@ui_site_homepage_path.presence || root_path) do %>
            <% transparent_background_logo =
                @ui_site_logo_transparent_background.presence || image_path_for("logo_header_for_transparent.png")
            %>
            <%= image_tag(transparent_background_logo, alt: Setting["org_name"], class: "top-logo--for-trasparent") %>

            <% white_background_logo =
                @ui_site_logo_white_background.presence || image_path_for("logo_header.png")
            %>
            <%= image_tag(white_background_logo, alt: Setting["org_name"], class: "top-logo--regular") %>
          <% end %>
        </div>

        <div class="header--navigation expanded not-print hide-for-small-only">
          <div class="hader--subnavigation-wrapper hide-for-small-only">
            <%= render partial: "shared/subnavigation_new", locals: { placement: 'desktop', launch_page: launch_page } %>
          </div>

          <% if !launch_page && !user_signed_in? %>
            <div class='header--account-buttons show-on-desktop hide-on-mobile'>
              <%= link_to t('devise_views.menu.login_items.login'), new_user_session_path, class: 'button sign-in-button -brand pillow', role: 'button' %>
            </div>
          <% end %>
        </div>
      </div>


    </div>
  </div>
  </header>
  <div class="header--responsive-menu-wrapper">
    <div id="responsive-menu" class='header--responsive-menu not-print'>
      <div class="subnavigation">

        <% if current_user.present? && !current_user.guest? %>
          <div class="header--responsive-menu--user">
            <div class="header--responsive-menu--user-avatar">
              <% if current_user&.image&.attached? %>
                <%= image_tag(current_user.image.variant(:medium)) %>
              <% else %>
                <%= current_user.first_letter_of_name %>
              <% end %>
            </div>
            <div class="header--responsive-menu--user-name">
              <%= current_user.name %>
            </div>
            <%= link_to(t("layouts.header.my_account_link"), user_path(current_user), class: "header--responsive-menu--user-profile-link") %>
            <%= link_to t("layouts.header.administration"), admin_root_path if current_user.administrator? %>
          </div>
        <% end %>

        <div class="header--responsive-menu-title">
          <div>
            <%= Setting['extended_option.general.title'] %>
          </div>
          <div>
            <b><%= Setting["extended_option.general.subtitle"] %></b>
          </div>
        </div>

        <% if !launch_page && !user_signed_in? %>
          <div class="show-on-mobile">
            <div class='header--responsive-menu-sign-in-section'>
              <%= link_to t('devise_views.menu.login_items.login'), new_user_session_path, class: 'header--responsive-menu-sign-auth-button', role: 'button' %>
              <%= link_to(t("devise_views.shared.links.signup_link"), new_user_registration_path, class: 'header--responsive-menu-sign-auth-button', style: "background:#00AA0B !important;color:#fff !important", role: "button") %>
            </div>
          </div>
        <% end %>

        <%= render partial: "shared/subnavigation_new", locals: { placement: 'mobile', launch_page: launch_page } %>
        <div class="small-12 column">
          <%= render "shared/top_links" %>
        </div>
      </div>
    </div>
  </div>
