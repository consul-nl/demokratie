<%= render Shared::ResourcesListComponent.new(
  resources: active_projekts,
  resource_type: Projekt,
  resource_link_additional_url_params: (@custom_page.present? ? { page_ref: @custom_page&.slug } : nil),
  title: @content_card.title || t("custom.content_cards.active_projekts.title")) do |c| %>
  <% unless @custom_page&.landing? && !@custom_page&.landing_show_projekts_overview? %>
    <% c.with_bottom_content do %>
      <%= link_to(t("custom.content_cards.active_projekts.all_projekts_link"), projekts_path(order: "index_order_all"), class: "resources-list--more-link") %>
    <% end %>
  <% end %>
<% end %>
