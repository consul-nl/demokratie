<div class="vcmap-container map_location map">
  <%= map_div %>
  <% if show_controls? %>
    <div id="map-overlay" class="map-overlay">
      <button onclick="event.preventDefault();App.VCMap.zoom(window.vcsApp.maps.activeMap)">+</button>
      <button onclick="event.preventDefault();App.VCMap.zoom(window.vcsApp.maps.activeMap, true)">-</button>
    </div>
    <div id="controls" class="controls">
      <% if editable %>
        <button onclick="event.preventDefault();App.VCMap.drawFeature(window.vcsApp, vcs.GeometryType.Point)">Punkt einzeichnen</button>
        <button onclick="event.preventDefault();App.VCMap.drawFeature(window.vcsApp, vcs.GeometryType.Polygon)">Fläche einzeichnen</button>
        <button onclick="event.preventDefault();App.VCMap.clearFeatures(window.vcsApp)">Elemente löschen</button>
      <% end %>
    </div>
    <div id="vc-popup" style="display:none"></div>
  <% end %>
</div>
