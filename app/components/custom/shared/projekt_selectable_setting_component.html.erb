<table>
  <tbody>
    <tr>
      <td class="small-6">
        <strong><%= t(@i18n_key) %></strong>
        <br>
        <span class="small">
          <%= t("#{@i18n_key}_description", default: t("admin.settings.no_description")) %>
        </span>
      </td>
      <td class="small-6">
        <%= form_for([:admin, @selectable_setting]) do |f| %>
          <%= f.hidden_field :tab, value: @tab if @tab.present? %>
          <div class="small-12 medium-6 large-8 column">
            <%= f.select :value, translated_options, label: false %>
          </div>
          <div class="small-12 medium-6 large-4 column">
            <%= f.submit(t("admin.settings.index.update_setting"), class: "button hollow expanded") %>
          </div>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
