<div class="<%= singular_name %> direct-upload nested-fields">
  <%= f.hidden_field :id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :cached_attachment %>

  <div class="title">
    <%= f.text_field :title, placeholder: t("#{plural_name}.form.title_placeholder") %>
  </div>

  <% if attachable.attachment.attached? && attachable.attachment.image? %>
    <%= render_image(attachable, :large, false) %>
  <% end %>

  <div class="attachment-actions">
    <p class="file-name small-9 cell"><%= file_name %></p>

    <div class="d-flex">
      <div class="small-9 cell action-add attachment-errors <%= singular_name %>-attachment">
        <%= file_field %>
      </div>

      <div class="small-3 cell action-remove text-right">
        <%= destroy_link %>
      </div>
    </div>
  </div>

  <div class="small-12 column">
    <div class="progress-bar-placeholder"><div class="loading-bar"></div></div>
  </div>

  <hr>
</div>
